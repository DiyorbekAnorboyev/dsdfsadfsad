<%= link_to "Back to projects", projects_path, class:'btn btn-primary mt-3' %>
<%= form_with(model: [@project, @project_admin], local: true) do |form| %>

<div class="flex items-center mb-4 mt-5">
  <%= form.select :user_id, User.where.not(id: current_user.id).map{ |u| [u.email, u.id] }, {}, { id: "user-select", class: "w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" , required: true} %>
  <%= form.text_field :project_id, value: @project.id, type: :hidden %>
  <button type="submit" class="btn btn-success">
    Add
  </button>
</div>

<% end %>